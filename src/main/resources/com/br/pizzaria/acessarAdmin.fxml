<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox
        alignment="CENTER"
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        spacing="20.0"
        stylesheets="@styles.css"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.br.pizzaria.AcessarAdminController">
    <children>
        <Text
                strokeType="OUTSIDE"
                strokeWidth="0.0"
                text="Lista de pedidos">
            <font>
                <Font size="36.0"/>
            </font>
        </Text>
        <TextField
                fx:id="filterField"
                promptText="Filtrar pedidos..."/>
        <TableView
                fx:id="ordersTable"
                prefHeight="200.0"
                prefWidth="600.0">
            <columns>
                <TableColumn
                        fx:id="colunaNome"
                        prefWidth="150.0"
                        text="Nome"/>
                <TableColumn
                        fx:id="colunaSobrenome"
                        prefWidth="150.0"
                        text="Sobrenome"/>
                <TableColumn
                        fx:id="colunaStatus"
                        prefWidth="150.0"
                        text="Status"/>
                <TableColumn
                        fx:id="colunaDetalhes"
                        prefWidth="150.0"
                        text="Detalhes"/>
            </columns>
        </TableView>
    </children>
</VBox>