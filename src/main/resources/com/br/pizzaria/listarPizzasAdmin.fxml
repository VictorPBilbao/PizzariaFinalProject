<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox
        alignment="CENTER"
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="650"
        prefWidth="900"
        spacing="20.0"
        stylesheets="@styles.css"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.br.pizzaria.ListarPizzasAdminController">
    <children>
        <Text
                strokeType="OUTSIDE"
                strokeWidth="0.0"
                text="Lista de pedidos">
            <font>
                <Font size="36.0"/>
            </font>
        </Text>
        <TextField
                fx:id="filterField"
                promptText="Filtrar pedidos...">
            <VBox.margin>
                <Insets
                        left="50.0"
                        right="50.0"/>
            </VBox.margin>
        </TextField>
        <TableView
                fx:id="ordersTable"
                prefHeight="200.0"
                prefWidth="600.0">
            <columns>
                <TableColumn
                        fx:id="colunaId"
                        prefWidth="100.0"
                        text="ID"
                        style="-fx-alignment: CENTER;"/>
                <TableColumn
                        fx:id="colunaNome"
                        prefWidth="150.0"
                        text="Nome"
                        style="-fx-alignment: CENTER;"/>
                <TableColumn
                        fx:id="colunaSobrenome"
                        prefWidth="150.0"
                        text="Sobrenome"
                        style="-fx-alignment: CENTER;"/>
                <TableColumn
                        fx:id="colunaStatus"
                        prefWidth="150.0"
                        text="Status"
                        style="-fx-alignment: CENTER;"/>
                <TableColumn
                        fx:id="colunaDetalhes"
                        prefWidth="150.0"
                        text="Detalhes"
                        style="-fx-alignment: CENTER;"/>
            </columns>
            <VBox.margin>
                <Insets
                        left="50.0"
                        right="50.0"/>
            </VBox.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>