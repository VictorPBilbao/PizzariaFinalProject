<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox
        alignment="TOP_CENTER"
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        spacing="50.0"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.br.pizzaria.DetalharPedido"
        stylesheets="@styles.css">
    <children>
        <Text
                fx:id="statusPedidoText"
                strokeType="OUTSIDE"
                strokeWidth="0.0"
                text="Pedido CODIGO: STATUS">
            <font>
                <Font size="36.0"/>
            </font>
            <VBox.margin>
                <Insets top="25.0"/>
            </VBox.margin>
        </Text>
        <TableView
                fx:id="pizzasTable"
                maxWidth="1000.0"
                prefHeight="200.0"
                prefWidth="919.0">
            <columns>
                <TableColumn
                        fx:id="colunaFormato"
                        prefWidth="75.0"
                        text="Formato"/>
                <TableColumn
                        fx:id="colunaLado"
                        prefWidth="75.0"
                        text="Lado / Raio"/>
                <TableColumn
                        fx:id="colunaArea"
                        prefWidth="75.0"
                        text="Área"/>
                <TableColumn
                        fx:id="colunaSabor1"
                        prefWidth="75.0"
                        text="Sabor 1"/>
                <TableColumn
                        fx:id="colunaSabor2"
                        prefWidth="75.0"
                        text="Sabor 2"/>
                <TableColumn
                        fx:id="colunaPreco"
                        prefWidth="75.0"
                        text="Preço"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <padding>
                <Insets
                        left="25.0"
                        right="25.0"/>
            </padding>
        </TableView>
    </children>
</VBox>